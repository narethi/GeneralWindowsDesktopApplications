             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleUIElements.Views.UserControls.DelegateControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Click="Button_Click" Content="{Binding RelativeSource={RelativeSource AncestorType=local:DelegateButton}, Path=ButtonContent}"/>
</UserControl>
