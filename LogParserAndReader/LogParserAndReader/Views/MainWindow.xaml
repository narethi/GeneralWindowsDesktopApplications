<SimpleUIElements:CustomCaptionWindow
        x:Class="LogParserAndReader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParserAndReader"
        xmlns:views="clr-namespace:LogParserAndReader.Views" 
        xmlns:SimpleUIElements="clr-namespace:SimpleUIElements.Views;assembly=SimpleUIElements"
        xmlns:CustomUserControls="clr-namespace:SimpleUIElements.Views.UserControls;assembly=SimpleUIElements"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="MainWindow" Height="450" Width="800" Background="White">
    <StackPanel>
        <CustomUserControls:CheckBoxComboBox 
            SelectionChanged="CheckBoxComboBox_SelectionChanged"
            CheckBoxValues="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.TestItemsList}"/>
        <views:FilterControl FilterController="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.FilterController}"/>
        <views:LogListControl LogsController="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.LogsController}"/>
    </StackPanel>
</SimpleUIElements:CustomCaptionWindow>
